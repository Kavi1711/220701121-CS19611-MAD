<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StickyNotesActivity">

    <!-- RecyclerView to display sticky notes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stickyNotesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_weight="1" />

    <!-- EditText for inputting a new note -->
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/noteInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a note"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:textSize="16sp"
         />

    <!-- FloatingActionButton to add a new note -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNoteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add Note" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
